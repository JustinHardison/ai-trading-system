# Environment Configuration
ENVIRONMENT=development  # development, staging, production

# LLM API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Broker API Keys - Interactive Brokers
IB_ACCOUNT=your_ib_account_number
IB_HOST=127.0.0.1
IB_PORT=7497  # 7497 for paper trading, 7496 for live
IB_CLIENT_ID=1

# Broker API Keys - MetaTrader
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your_mt5_server

# Broker API Keys - Alpaca
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Paper trading URL

# TradingView Webhook
TRADINGVIEW_WEBHOOK_SECRET=your_webhook_secret

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trading_system
POSTGRES_USER=trader
POSTGRES_PASSWORD=secure_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# TimescaleDB Configuration
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_DB=trading_timeseries
TIMESCALE_USER=trader
TIMESCALE_PASSWORD=secure_password

# Monitoring
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090

# Trading Configuration
TRADING_MODE=paper  # paper or live
MAX_POSITION_SIZE=100000
MAX_DAILY_LOSS_PCT=0.04  # 4% max daily loss
MAX_OVERALL_LOSS_PCT=0.08  # 8% max overall loss
RISK_PER_TRADE_PCT=0.02  # 2% risk per trade

# Prop Firm Configuration
PROP_FIRM=FTMO  # FTMO, TopStep, etc.
ACCOUNT_SIZE=100000
ACCOUNT_TYPE=challenge  # challenge, verification, funded

# Strategy Configuration
STRATEGY_MODE=hybrid  # rl, traditional, hybrid
PRIMARY_RL_ALGORITHM=PPO  # PPO, DQN, A2C, DDPG
ENABLE_LLM_ANALYSIS=true
LLM_PROVIDER=anthropic  # anthropic, openai, groq, ollama

# Alert Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url
ALERT_EMAIL=your_email@example.com

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=true
LOG_DIR=./logs

# Feature Flags
ENABLE_BACKTESTING=true
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_AUTOMATED_RETRAINING=true
ENABLE_SENTIMENT_ANALYSIS=true
